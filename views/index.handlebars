
    <div id="title-wrapper">
      <h1 id="title">Mongo-Lion</h1>
      <h2 id ="subtitle"><i>Let Mongo-Lion hunt articles for you!</i></h2>
    </div>

    <div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

    <div id="content-wrapper">
         {{#if article}}
            {{#each article}}
            <div class="card">
              <div class="card-body">
                <a href ={{this.link}} target="_blank"><h2 class="card-title text-white bg-warning">
                    {{this.title}}</h2></a>       
                <p class="card-text">
                    {{this.summary}}</p>
                    <button type="button" id="save-button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                    <button type="button" id="comment-button" class="btn btn-primary save"
                     data-toggle="modal" data-target="#commentModal" data-id={{this._id}}>Leave Comment</button>

